# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/signature_shades?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# JWT Configuration
# IMPORTANT: Change this to a strong, random secret in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production-use-openssl-rand-base64-32
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# Admin Setup (for first-time deployment)
# Run: npm run create:admin
# Default credentials: admin@signatureshades.com / Admin@123
# CHANGE PASSWORD IMMEDIATELY AFTER FIRST LOGIN!
